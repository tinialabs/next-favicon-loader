{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["esnext"],
      "allowJs": true,
      "jsx": "react",
      "noEmit": false,
      "outDir": "dist",
      "declaration": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "downlevelIteration": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  }
  